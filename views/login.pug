html(lang="en")
  head
    title Login form
    link(rel="stylesheet",href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css")
    link(rel="stylesheet",href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
    if (process.env.NODE_ENV === 'development')
      link(rel="stylesheet", href="/tests/vendor/mocha.css")
    style.
      body{ padding-top:80px; }
  body
    .container
      .row
        .col-sm-6.col-sm-offset-3
          h1
            span.fa.fa-sign-in
            form(action="/login",method="POST")
                .form-group
                  label(for="username").
                    Username
                  input#username.form-control(type="text",placeholder="Enter Login",name="username")
                .form-group
                  label(for="password").
                    Password
                  input#password.form-control(type="text",placeholder="Enter Password",name="password")
                .form-group.row
                button.btn.btn-warning.btn-lg(type="submit") Submit
      .row
        if (process.env.NODE_ENV === 'development')
          #mocha.col-sm-12
      if (process.env.NODE_ENV === 'development')
        script(src="/tests/vendor/mocha.js")
        script(src="/tests/vendor/chai.js")
        script(src="/tests/tests-login.js")
        script mocha.run();
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

    
